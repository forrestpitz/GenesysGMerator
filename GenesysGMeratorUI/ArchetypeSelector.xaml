<Window x:Class="GenesysGMeratorUI.Archetype"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenesysGMeratorUI"
        mc:Ignorable="d"
        Title="Archetype Selector" Height="230" Width="555">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label HorizontalAlignment="Center" Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Archetype:</Label>
        <ComboBox Name="ArchetypePicker" HorizontalAlignment="Center" Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="3" 
                  VerticalAlignment="Top" Height="20" Width="200"  Margin="0,10" SelectionChanged="ArchetypePicker_SelectionChanged"></ComboBox>

        <Label HorizontalAlignment="Center" Grid.ColumnSpan="6" Grid.Row="2">Characteristics</Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="6">
            <Grid>
                <Image Source="Symbols\Characteristic.png" Width="90"/>
                <Label Name="Brawn" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40" FontSize="30" FontWeight="Bold">2</Label>
            </Grid>
            <Grid>
                <Image Source="Symbols\Characteristic.png" Width="90"/>
                <Label Name="Agility" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40" FontSize="30" FontWeight="Bold">2</Label>
            </Grid>
            <Grid>
                <Image Source="Symbols\Characteristic.png" Width="90"/>
                <Label Name="Intelect" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40" FontSize="30" FontWeight="Bold">2</Label>
            </Grid>
            <Grid>
                <Image Source="Symbols\Characteristic.png" Width="90"/>
                <Label Name="Cunning" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40" FontSize="30" FontWeight="Bold">2</Label>
            </Grid>
            <Grid>
                <Image Source="Symbols\Characteristic.png" Width="90"/>
                <Label Name="Willpower" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40" FontSize="30" FontWeight="Bold">2</Label>
            </Grid>
            <Grid>
                <Image Source="Symbols\Characteristic.png" Width="90"/>
                <Label Name="Presence" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40" FontSize="30" FontWeight="Bold">2</Label>
            </Grid>
        </StackPanel>
        <Button HorizontalAlignment="Center" Grid.ColumnSpan="6" Grid.Row="4" Width="100" Margin="0,5" Click="Save_Click">Save</Button>
    </Grid>
</Window>
