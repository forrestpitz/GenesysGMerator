<Window x:Class="GenesysGMeratorUI.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenesysGMeratorUI"
        mc:Ignorable="d"
        Title="Genesys GMerator" Height="150" Width="300">
    <Grid>
        <Label HorizontalAlignment="Center" Margin="0,15,0,0">Welcome to the Genesys GMerator! Who are you?</Label>
        <Button Grid.Column="0" Grid.Row="2" Margin="10,10,0,0" Width="125"
Height="25" HorizontalAlignment="Left" Click="GM_Click">GM</Button>
        <Button Grid.Column="0" Grid.Row="2" Margin="0,10,10,0" Width="125"
Height="25" HorizontalAlignment="Right">Player</Button>
    </Grid>
</Window>
